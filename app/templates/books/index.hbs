<h2>Books</h2>

<div class="row">
	<div class="col-md-12">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th>Author</th>
					<th>Library</th>
					<th>Year</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{{#each model as |book|}}
					<tr>
						<td>{{book.title}}</td>
						<td>{{book.author.name}}</td>
						<td>{{book.library.name}}</td>
						<td>{{book.releaseYear}}</td>
						<td>
							{{#link-to 'books.edit' book.id class="btn btn-success btn-xs"}}Edit{{/link-to}}
							<button class="btn btn-danger btn-xs" {{action 'deleteBook' contact}}>
								Delete
							</button>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
