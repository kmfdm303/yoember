<div class="form-horizontal">
	<div class="form-group has-feedback {{if item.isValidTitle 'has-success'}}">
		<label class="col-sm-2 control-label">Title</label>
		<div class="col-sm-10">
			{{input type="text" value=item.title class="form-control" placeholder="Title of the book"}}
			{{#if item.isValidTitle}}
				<span class="glyphicon glyphicon-ok form-control-feedback"></span>
			{{/if}}
		</div>
	</div>

	<div class="form-group has-feedback {{if item.isValidReleaseYear 'has-success'}}">
		<label class="col-sm-2 control-label">Release Date</label>
		<div class="col-sm-10">
			{{input type="text" value=item.releaseYear class="form-control" placeholder="Year book was released"}}
			{{#if item.isValidReleaseYear}}
				<span class="glyphicon glyphicon-ok form-control-feedback"></span>
			{{/if}}
		</div>
	</div>

	<div class="form-group has-feedback {{if item.isValidLibrary 'has-success'}}">
		<label class="col-sm-2 control-label">Libraries</label>
		<div class="col-sm-10">
			{{!--
			{{select-picker content=libraries optionsLabelPath="content.name"}} 
			--}}
			<select 
				id="111" 
				class="form-control" 
				name="sss" 
				{{action "libraryChanged" 
				value="target.value"}}
			>
				{{#each libraries as |library|}}
					<option value="{{library.id}}" selected={{eq library.id item.library.id}}>{{library.name}}</option>
				{{/each}}
			</select>
			
			{{#if item.isValidLibrary}}
				<span class="glyphicon glyphicon-ok form-control-feedback"></span>
			{{/if}}
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button
				type="submit"
				class="btn btn-default"
				{{action "buttonClicked" item}}
				disabled="{{unless item.isValid 'disabled'}}"
			>
				{{buttonLabel}}
			</button>
		</div>
	</div>

</div>
