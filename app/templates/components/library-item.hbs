<div class="panel panel-default library-item">
	<div class="panel-heading">
		<h3 class="panel-title">{{item.name}}</h3>
	</div>
	<div class="panel-body">
		<p>Address: {{item.address}}</p>
		<p>Phone: {{item.phone}}</p>
		<p>Books: {{item.books.length}}</p>
		<hr>
		{{#if isBooksShowing}}
			{{#each item.books as |book|}}
				<p>
					<i>{{book.title}}</i> <br/>
					by {{book.author.name}} ({{book.releaseYear}})
				</p>
			{{/each}}
			<p>
				<button class="btn btn-primary btn-xs btn-block" {{action 'booksHide'}}>Hide Books</button>
			</p>
		{{else}}
			<p>
				<button class="btn btn-primary btn-xs btn-block" {{action 'booksShow'}}>Show Books</button>
			</p>
		{{/if}}
	</div>
	<div class="panel-footer text-right">
		{{yield}}
	</div>
</div>
